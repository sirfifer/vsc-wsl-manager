#!/bin/bash
# Pre-commit hook to verify correct git identity

# Expected identity for this repository
EXPECTED_IDENTITY="sirfifer"
EXPECTED_EMAIL_PATTERN="@(amerman\.net|cdbaby\.com)"  # Valid email domains

# Get current git config
CURRENT_NAME=$(git config user.name)
CURRENT_EMAIL=$(git config user.email)

# Colors for output
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m'

# Check if identity file exists
if [ -f .git/current-identity ]; then
    EXPECTED_IDENTITY=$(cat .git/current-identity)
fi

# Check if using generic/wrong identity
if [ "$CURRENT_NAME" == "User" ] || [ "$CURRENT_EMAIL" == "user@example.com" ]; then
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e "${RED}ERROR: Git is configured with generic credentials!${NC}"
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo ""
    echo -e "${YELLOW}Current configuration:${NC}"
    echo "  Name:  $CURRENT_NAME"
    echo "  Email: $CURRENT_EMAIL"
    echo ""
    echo -e "${YELLOW}This will cause commits to be attributed to the wrong user on GitHub!${NC}"
    echo ""
    echo -e "${GREEN}To fix this, run:${NC}"
    echo -e "${GREEN}  source ~/bin/git-switch-identity.sh${NC}"
    echo -e "${GREEN}  git-switch sirfifer${NC}"
    echo ""
    echo -e "${YELLOW}Or manually set:${NC}"
    echo "  git config user.name \"sirfifer\""
    echo "  git config user.email \"richard@amerman.net\""
    echo ""
    exit 1
fi

# Check if committing as ramermancdb in sirfifer's repo
if [[ "$CURRENT_NAME" == "ramermancdb" ]] && [[ "$EXPECTED_IDENTITY" == "sirfifer" ]]; then
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e "${RED}ERROR: Wrong git identity for this repository!${NC}"
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo ""
    echo -e "${YELLOW}This repository expects identity: ${GREEN}$EXPECTED_IDENTITY${NC}"
    echo -e "${YELLOW}But you are committing as: ${RED}$CURRENT_NAME${NC}"
    echo ""
    echo -e "${GREEN}To fix this, run:${NC}"
    echo -e "${GREEN}  git-switch sirfifer${NC}"
    echo ""
    exit 1
fi

# Optional: Show current identity for confirmation
echo -e "${GREEN}✓ Committing as: $CURRENT_NAME <$CURRENT_EMAIL>${NC}"

# Continue with commit
exit 0